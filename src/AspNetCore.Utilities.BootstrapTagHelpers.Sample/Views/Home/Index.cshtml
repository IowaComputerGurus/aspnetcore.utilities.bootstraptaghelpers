@model AspNetCore.Utilities.BootstrapTagHelpers.Sample.Models.SampleModel

@{
    ViewData["Title"] = "FontAwesome Tag Helper Demos";
}

<h1>TagHelper Demos</h1>

<p>This page shows examples of usage of all included tag helpers within this library.</p>

<h2>alert</h2>

<p>Renders a Alert</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Example</th>
            <th>Display</th>
            <th>Code</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Primary</th>
            <td>
                <alert alert-color="Primary">
                    This is a primary alert!  Yay
                </alert>
            </td>
            <td>
                <code>
                    &lt;alert alert-color=&quot;Primary&quot;&gt;
                        This is a primary alert!  Yay
                    &lt;/alert&gt;
                </code>
            </td>
        </tr>
        <tr>
            <th>Secondary</th>
            <td>
                <alert alert-color="Secondary">
                    This is a secondary alert!  Yay
                </alert>
            </td>
            <td>
                <code>
                    &lt;alert alert-color=&quot;Secondary&quot;&gt;
                        This is a secondary alert!  Yay
                    &lt;/alert&gt;
                </code>
            </td>
        </tr>
        <tr>
            <th>Danger</th>
            <td>
                <alert alert-color="Danger">
                    This is a danger alert!  With a <a href="#" class="alert-link">link!</a>.
                </alert>
            </td>
            <td>
                <code>
                    &lt;alert alert-color=&quot;Danger&quot;&gt;
                        This is a danger alert!  Yay
                    &lt;/alert&gt;
                </code>
            </td>
        </tr>
        <tr>
            <th>Warning Dismissible</th>
            <td>
                <alert alert-color="Warning" dismissible="true">
                    This is a dismissable warning alert! 
                </alert>
            </td>
            <td>
                <code>
                    &lt;alert alert-color=&quot;Warning&quot; dismissible=&quot;false&quot;&gt;
                    This is a dismissable warning alert! 
                &lt;/alert&gt;
                </code>
            </td>
        </tr>
    </tbody>
</table>

<h2>Text Input Helper</h2>

<p>This is a helper for rendering standard bootstrap fom inputs, using ASP.NET Model Binding.</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Example</th>
            <th>Display</th>
            <th>Code</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Name Field</th>
            <td><form-text-input asp-for="Name"></form-text-input></td>
            <td>
                <code>
                    &lt;form-text-input asp-for=&quot;Name&quot;&gt;&lt;/form-text-input&gt;
                </code>
            </td>
        </tr>
        <tr>
            <th>Email Field</th>
            <td><form-text-input asp-for="Email"></form-text-input></td>
            <td>
                <code>
                    &lt;form-text-input asp-for=&quot;Email&quot;&gt;&lt;/form-text-input&gt;
                </code>
            </td>
        </tr>
    </tbody>
</table>

